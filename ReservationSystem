                }
                seatpe[k]=column[k]+""+row[k];
                System.out.println(seatpe[k]);
            }
        }
    }

    void fare()
    {
        System.out.println("\t**************************************");
        System.out.println("         Fare of the total journey      ");
        if(tc[t]==1)
        {
            fare[t]=0.0;        
            fare[t]+=adult[t]*3500;
            fare[t]+=child[t]*2000;
            fare[t]+=infant[t]*1000;
            System.out.println("The fare :                    Rs."+fare[t]);
            System.out.println("Service and Air Tax :         12.25%");
            System.out.println("Swaatch Bhaarat Abhyiyan Cess:0.5%");
            if(meal==1)
            {
                System.out.println("Meal cost=                    Rs.150/-");
                fare[t]+=150;
            }
            fare[t]+=12.25/100*fare[t];
            fare[t]+=0.5/100*fare[t];
            fare[t]=Math.round(fare[t]);System.out.println("___________________________________________");
            System.out.println("Final price :                 Rs."+(fare[t]));   
        }
        else if(tc[t]==2)
        {
            fare[t]=0.0;        
            fare[t]=fare[t]+(adult[t]*2000);
            fare[t]=fare[t]+(child[t]*1000);
            fare[t]=fare[t]+(infant[t]*450);
            System.out.println("The fare =                    Rs. "+fare[t]);
            System.out.println("Service and Air Tax=          12.25%");
            System.out.println("Swaatch Bhaarat Abhyiyan Cess=0.5%");
            if(meal==1)
            {
                System.out.println("Meal cost=                    Rs.150/-");
                fare[t]+=150;
            }
            fare[t]+=12.25/100*fare[t];
            fare[t]+=0.5/100*fare[t];
            fare[t]=Math.round(fare[t]);System.out.println("___________________________________________");
            System.out.println("Final price =                 Rs. "+fare[t]);   
        }
        else if(tc[t]==3)
        {
            fare[t]=0.0;        
            fare[t]=fare[t]+(adult[t]*2500);
            fare[t]=fare[t]+(child[t]*1500);
            fare[t]=fare[t]+(infant[t]*750);
            System.out.println("The fare =                    Rs. "+fare[t]);
            System.out.println("Service and Air Tax=          12.25%");
            System.out.println("Swaatch Bhaarat Abhyiyan Cess=0.5%");
            if(meal==1)
            {
                System.out.println("Meal cost=                    Rs.150/-");
                fare[t]+=150;
            }
            fare[t]+=12.25/100*fare[t];
            fare[t]+=0.5/100*fare[t];
            fare[t]=Math.round(fare[t]);
            System.out.println("___________________________________________");
            System.out.println("Final price =                 Rs. "+fare[t]);   
        }
    }

    void ticket()
    {
        System.out.println("Please enter your PNR number(4-Digit)");
        while(true)
        {
            try
            {
                s1=sc.nextLine();
                if(s1.length()==0)
                {
                    System.out.println("Please enter valid data");
                    continue;
                }
                else
                    c=Integer.parseInt(s1);
                if(c<1000 || c>9999)
                {
                    System.out.println("Enter a 4 digit number");continue;
                }
            }
            catch(Exception obj)
            {
                System.out.println("Enter a number");
                continue;
            }
            break;
        }
        int k=0;
        for(int i=0;i<20;i++)
        {
            if(c==pnr_no[i])
            {
                k=1;p=i;break;
            }
        }
        if(k==1 && p<6)

        {
            System.out.println("\t\t\t*************************************************************************");
            System.out.println("\t\t\t20/01/2017\t\t\t\t\t\t\t12:24:46");
            System.out.println("\t\t\t*************************************************************************");
            System.out.print("\t\t\tDeparture airport:"+dpcity[d1[p]-1]);
            System.out.println("\t\t\tArrival Airport:"+arcity[a[p]-1]);
            System.out.println("\t\t\tDate of departure:"+dep_date[p]);
            System.out.println("\t\t\tNumber of adults:"+adult[p]+"\tchildren:"+child[p]+"\tinfants:"+infant[p]);
            System.out.print("\t\t\tTime="+timea[p]);
            System.out.print("\tClass of travel:");
            System.out.println("Business");
            System.out.println("\t\t\tAirline:"+airline[p]);
            System.out.print("\t\t\tSeat Number:");
            System.out.print(seatb[p]+",");
            System.out.print(seatb[p+1]);            
            System.out.println("\tFare:Rs."+fare[p]);
            for(long i=1;i<100000;i++)
            {
                for(int j=1;j<1000;j+=2)
                {}
            }       
            System.out.println("\t\t\t*************************************************************************");
            System.out.println("Enter 1.Exit or 2.Main Menu");
            int s;
            while(true)
            {
                try
                {
                    s1=sc.nextLine();
                    if(s1.length()==0)
                    {
                        System.out.println("Please enter valid data");
                        continue;
                    }
                    else
                        s=Integer.parseInt(s1);
                    if(s<1 || s>2)
                    {
                        System.out.println("Enter 1 or 2");
                        continue;
                    }
                }
                catch(Exception obj)
                {
                    System.out.println("Enter a valid number");
                    continue;
                }
                break;    
            }
            if(s==1)
                exit();
            if(s==2)
            {
                System.out.print("Redirecting to Main Menu");
                for(long i=1;i<=10000000;i++)
                {
                    if(i==18000)
                        System.out.print("???");
                    if(i==1800000)
                        System.out.print("???");
                    if(i==10000000)
                        System.out.print("???");
                }
                System.out.println();
                choice();
            }
        }
        else if(k==1 && p>5)
        {
            System.out.println("\t\t\t*************************************************************************");
            DateFormat dateFormat=new SimpleDateFormat("\t\t\tdd/MM/yyyy\t\t\t\t\t\t\thh:mm:ss");
            Date date=new Date();
            System.out.println(dateFormat.format(date));
            System.out.println("\t\t\t*************************************************************************");
            System.out.print("\t\t\tDeparture airport:"+dpcity[d1[p]-1]);
            System.out.println("\t\t          Arrival Airport:"+arcity[a[p]-1]);
            System.out.println("\t\t\tDate of departure:"+dep_date[p]);
            System.out.println("\t\t\tNumber of adults:"+adult[p]+"\t    children:"+child[p]+"\t          infants:"+infant[p]);
            System.out.print("\t\t\tTime="+timea[p]+"\t");
            System.out.print("    Class of travel:");
            if(tc[p]==1)
                System.out.println("Business");
            else if(tc[p]==2)
                System.out.println("Economy");
            else if(tc[p]==3)
                System.out.println("Premium Economy");
            System.out.print("\t\t\tAirline:"+airline[p]);
            System.out.println("\t    Fare:Rs."+fare[p]);
            System.out.print("\t\t\tSeat Number:");
            if(tc[p]==1)
            {   System.out.print(seatb[t1[p]]);
                for(int i=t1[p]+1;i<t1[p]+adult[p]+child[p]+infant[p];i++)
                    System.out.print(","+seatb[i]);
            }
            if(tc[p]==2)
            {
                System.out.print(seate[t2[p]]);
                for(int i=t2[p]+1;i<t2[p]+adult[p]+child[p]+infant[p];i++)
                    System.out.print(","+seate[i]);
            }
            if(tc[p]==3)
            {
                System.out.print(seatpe[t3[p]]);
                for(int i=t3[p]+1;i<t3[p]+adult[p]+child[p]+infant[p];i++)
                    System.out.print(","+seatpe[i]);
            }
            System.out.println();
            System.out.println("\t\t\t*************************************************************************");
            for(long i=1;i<100000;i++)
            {
                for(int j=1;j<1000;j+=2)
                {}
            }  
            System.out.println("Enter 1.Exit or 2.Main Menu");
            int s;
            while(true)
            {
                try
                {
                    s1=sc.nextLine();
                    if(s1.length()==0)
                    {
                        System.out.println("Please enter valid data");
                        continue;
                    }
                    else
                        s=Integer.parseInt(s1);
                    if(s<1 || s>2)
                    {
                        System.out.println("Enter 1 or 2");
                        continue;
                    }
                }
                catch(Exception obj)
                {
                    System.out.println("Enter a valid number");
                    continue;
                }
                break;    
            }
            if(s==1)
                exit();
            if(s==2)
            {
                System.out.print("Redirecting to Main Menu");
                for(long i=1;i<=10000000;i++)
                {
                    if(i==18000)
                        System.out.print("???");
                    if(i==1800000)
                        System.out.print("???");
                    if(i==10000000)
                        System.out.print("???");
                }
                System.out.println();
                choice();
            }
        }
        else
        {
            System.out.println("NO such PNR exists!!");
            System.out.print("Redirecting to Main Menu");
            for(long i=1;i<=10000000;i++)
            {
                if(i==18000)
                    System.out.print("???");
                if(i==1800000)
                    System.out.print("???");
                if(i==10000000)
                    System.out.print("???");
            }
            System.out.println();
            choice();
        }
    }

    void cancel()
    {
        System.out.println("Enter the PNR number of your ticket to be cancelled(4-Digit)");
        while(true)
        {
            try
            {
                s1=sc.nextLine();
                if(s1.length()==0)
                {
                    System.out.println("Please enter valid data");
                    continue;
                }
                else
                    c=Integer.parseInt(s1);
                if(c<1000 || c>9999)
                {
                    System.out.println("Enter a 4 digit number");continue;
                }
            }
            catch(Exception obj)
            {
                System.out.println("Enter a number");
                continue;
            }
            break;
        }
        int k=0;
        for(int i=0;i<10;i++)
        {
            if(c==pnr_no[i])
            {
                k=1;p=i;break;
            }
        }
        if(k!=1)
        {
            System.out.println("No such PNR exists");
            System.out.print("Redirecting to Main Menu");
            for(long i=1;i<100000000;i++)
            {
                if(i==18000)
                    System.out.print("???");
                if(i==1800000)
                    System.out.print("???");
                if(i==18000000)
                    System.out.print("???");
            }
            System.out.println();
            choice();
        }
        else
        {
            System.out.println("The ticket with PNR number "+c+" is successfully cancelled");
            if(p<6)
            {
                pnr_no[p]=0;
                pnr_no[p+1]=0;
            }
            else
                pnr_no[p]=0;
            System.out.print("Redirecting to Main Menu");
            for(long i=1;i<100000000;i++)
            {
                if(i==18000)
                    System.out.print("???");
                if(i==1800000)
                    System.out.print("???");
                if(i==18000000)
                    System.out.print("???");
            }
            System.out.println();
            choice();
        }
    }

    void view()
    {
        System.out.println("Enter the PNR number for viewing the details of the passenger(4-Digit)");
        while(true)
        {
            try
            {   s1=sc.nextLine();
                if(s1.length()==0)
                {
                    System.out.println("Please enter valid data");
                    continue;
                }
                else
                    c=Integer.parseInt(s1);
                if(c<1000 || c>9999)
                {
                    System.out.println("Enter a 4-digit number");
                    continue;
                }
            }
            catch(Exception obj)
            {
                System.out.println("Enter a digit");
                continue;
            }
            break;
        }
        int k=0;
        for(int i=0;i<20;i++)
        {
            if(c==pnr_no[i])
            {
                k=1;p=i;break;
            }
        }
        if(k==1)
        {
            if(t>5 && p>5)
            {
                System.out.println("  Name\t\t\t\tAge\t\tGender");  
                int r=adult[p]-1;
                for(int i=p;i<adult[t]+p;i++)
                {         
                    System.out.print("  "+namea[na[p]-r]);
                    for(int j=0;j<30-namea[na[p]-r].length();j++)
                    {System.out.print(' ');}      
                    System.out.print(agea[aa[p]-r]+"\t\t");
                    System.out.print(gendera[ga[p]-r]);
                    System.out.println();
                    r--;
                }   
                r=child[p]-1;
                for(int i=p;i<p+child[p];i++)
                {            
                    System.out.print("  "+namec[nc[p]-r]);
                    for(int j=0;j<30-namec[nc[p]-r].length();j++)
                    {System.out.print(' ');}
                    System.out.print(agec[ac[p]-r]+"\t\t");
                    System.out.print(genderc[gc[p]-r]);
                    System.out.println();
                    r--;
                }   
                r=infant[p]-1;
                for(int i=p;i<p+infant[p];i++)
                {            
                    System.out.print("  "+namei[ni[p]-r]);
                    for(int j=0;j<30-namei[ni[p]-r].length();j++)
                    {System.out.print(' ');}
                    System.out.print(agei[ai[p]-r]+"\t\t");
                    System.out.print(genderi[gi[p]-r]);
                    System.out.println();
                    r--;
                }
            }
            else 
            {
                System.out.println("  Name\t\t\t\tAge\t\tGender");
                System.out.print
                ("1."+namea[p]+"\t\t\t");
                System.out.print(agea[p]+"\t\t");
                System.out.print(gendera[p]);
                System.out.println();
                System.out.print("2."+namec[p]+"\t\t\t");
                System.out.print(agec[p]+"\t\t");
                System.out.print(genderc[p]);
                System.out.println();
            }
        }
        else
        {
            System.out.println("No such PNR exists");
            System.out.print("Redirecting to Main Menu");
            for(long i=1;i<100000000;i++)
            {
                if(i==18000)
                    System.out.print("???");
                if(i==1800000)
                    System.out.print("???");
                if(i==18000000)
                    System.out.print("???");
            }
            System.out.println();
            choice();
        }
        System.out.println("Enter 1.Exit or 2.Main Menu");
        int s;
        while(true)
        {
            try
            {
                s1=sc.nextLine();
                if(s1.length()==0)
                {
                    System.out.println("Please enter valid data");
                    continue;
                }
                else
                    s=Integer.parseInt(s1);
                if(s<1 || s>2)
                {
                    System.out.println("Enter 1 or 2");
                    continue;
                }
            }
            catch(Exception obj)
            {
                System.out.println("Enter a valid number");
                continue;
            }
            break;  
        }
        if(s==1)
            exit();
        else
        {
            System.out.print("Redirecting to Main Menu");
            for(long i=1;i<100000000;i++)
            {
                if(i==18000)
                    System.out.print("???");
                if(i==1800000)
                    System.out.print("???");
                if(i==18000000)
                    System.out.print("???");
            }
            System.out.println();
            choice();
        }          
    }  

