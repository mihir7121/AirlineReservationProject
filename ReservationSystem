    int hour()//to generate the hour number
    {
        int l=0;
        while(true)
        {
            double d=Math.random();
            d=d*100;
            if(d>0 &&d<24)
            {
                l=(int)d;
                break;
            }
            else 
                continue;
        }
        return l;
    }

    int minutes()//to generate the minutes
    {
        int l=0;
        while(true)
        {
            double d=Math.random();
            d=d*100;
            if(d>=0 && d<60)
            {
                l=(int)d;
                if(l%5!=0)
                {
                    continue;
                }
                break;
            }
            else 
                continue;
        }
        return l;
    }

    String main1()
    {
        int h=hour();
        int m=minutes();
        String minutes="";
        if(m>=0 && m<=9)
        {
            minutes="0"+m+" ";
        }
        else
        {
            minutes=m+" ";
        }
        time=h+":"+minutes+"hours";      
        return time;
    }

    void book()
    {
        t++;
        dep();
        arr();
        dep_y();
        dep_m();
        dep_d();
        dep_date[t]=d+" "+m+","+y+".";
        airlinep();
        timechoice();
        adult();
        child();
        infant();
        travelclass();
        passengerdetails();
        seat();
        System.out.println("\t**************************************");
        System.out.println("Would you like to have a meal?\n1.Yes\t2.No");
        while(true)
        {
            try
            {
                s1=sc.nextLine();
                if(s1.length()==0)
                {
                    System.out.println("Please enter valid data");
                    continue;
                }
                else
                    meal=Integer.parseInt(s1);
                if(meal<1 || meal>2)
                {
                    System.out.println("Enter between 1 and 2");
                    continue;
                }
            }
            catch(Exception obj)
            {
                System.out.println("Enter valid number");
                continue;
            }
            break;
        }
        fare();
        System.out.println("\t**************************************");
        System.out.println("Flight:      "+dpcity[d1[t]-1]+" to "+arcity[a[t]-1]);
        System.out.println("Date:        "+dep_date[t]);
        System.out.println("Time:        "+time);
        System.out.println("Fare:        Rs."+fare[t]);
        if(meal==1)
            System.out.println("Meal:        Yes");
        else
            System.out.println("Meal:        No");
        System.out.println("Are you sure you want to continue with the booking: 1.Yes 2.No");
        int s;
        while(true)
        {
            try
            {
                s1=sc.nextLine();
                if(s1.length()==0)
                {
                    System.out.println("Please enter valid data");
                    continue;
                }
                else
                    s=Integer.parseInt(s1);
                if(s<1 || s>2)
                {
                    System.out.println("Enter between 1 and 2");
                    continue;
                }
            }
            catch(Exception obj)
            {
                System.out.println("Enter valid number");
                continue;
            }
            break;
        }
        if(s==1)
        {
            System.out.println("Please Wait...PNR is being generated");
            for(int i=0;i<1000000000;i++);
            System.out.print("PNR NUMBER for this transaction is: ");
            while(true)
            {
                pnr_no[t]=(int)(Math.random()*10000);
                if(pnr_no[t]<1000 || pnr_no[t]>9999)
                    continue;
                else
                {
                    pnr_no[t]=Math.round(pnr_no[t]);
                    break;
                }
            }
            System.out.println(pnr_no[t]);
            System.out.println("Your ticket has been booked!!");
            System.out.println("Enjoy your flight!!");  
            System.out.println("***************************************************");
            System.out.print("Redirecting to Main menu");
            for(long i=1;i<100000000;i++)
            {
                if(i==18000)
                    System.out.print("...");
                if(i==1800000)
                    System.out.print("...");
                if(i==18000000)
                    System.out.print("...");
            }
            System.out.println();
            choice();
        }
        else
        {
            t--;
            System.out.print("Redirecting to Main Menu");
            for(long i=1;i<100000000;i++)
            {
                if(i==18000)
                    System.out.print("???");
                if(i==1800000)
                    System.out.print("???");
                if(i==18000000)
                    System.out.print("???");
            }
            System.out.println();
            choice();
        }
    }

    void dep()
    {
        System.out.println("\tChoose the departure Airport City");
        for(int i=0;i<10;i++)
        {
            System.out.println((i+1)+"."+dpcity[i]);
        }
        System.out.println("Enter the choice");
        while(true)
        {
            try
            {
                s1=sc.nextLine();
                if(s1.length()==0)
                {
                    System.out.println("Please enter valid data");
                    continue;
                }
                else
                    d1[t]=Integer.parseInt(s1);
                if(d1[t]<1 || d1[t]>10)
                {
                    System.out.println("Enter between 1 and 10");
                    continue;
                }
            }
            catch(NumberFormatException obj)
            {
                System.out.println("Enter a number");
                continue;
            }
            catch(Exception obj)
            {
                System.out.println("Invalid Input");
                System.out.println("Enter again");
                continue;                
            }
            break;
        }
    }

    void arr()
    {
        System.out.println("\t**************************************");
        System.out.println("\tChoose the arrival Airport City");
        for(int i=0;i<10;i++)
        {
            System.out.println((i+1)+"."+arcity[i]);
        }
        System.out.println("Enter the choice");
        while(true)
        {
            try
            {
                s1=sc.nextLine();
                if(s1.length()==0)
                {
                    System.out.println("Please enter valid data");
                    continue;
                }
                else
                    a[t]=Integer.parseInt(s1);
                if(a[t]==d1[t])
                {
                    System.out.println("Both the cities are same");
                    System.out.println("Enter another city");
                    continue;
                }
                if(a[t]<1 || a[t]>10)
                {
                    System.out.println("Enter between 1 and 10");
                    continue;
                }
            }
            catch(Exception obj)
            {
                System.out.println("Invalid Input");
                System.out.println("Ener again");
                continue;
            }
            break;
        }
    }

    void dep_y()
    { 
        int k=0;int n;
        System.out.println("\t**************************************");
        System.out.println("\tEnter the year of departure");
        System.out.println("Booking available only till 31st Dec, 2020.");
        while(true)
        {
            try
            {
                s1=sc.nextLine();
                if(s1.length()==0)
                {
                    System.out.println("Please enter valid data");
                    continue;
                }
                else
                    y=Integer.parseInt(s1);
                n=y;k=0;
                while(n!=0)
                {
                    k++;
                    n/=10;
                }
                if((k<4 || k>4))
                {
                    System.out.println("Enter a 4 digit number");
                    continue;
                }
                if(y<2017 || y>2020)
                {
                    System.out.println("Enter between 2017 and 2020.");
                    continue;
                }
            }
            catch(Exception obj)
            {
                System.out.println("Enter digits only");
                System.out.println("Enter again");
                continue;
            }
            break;
        }
    }

    void dep_m()
    {
        System.out.println("\tEnter the month of departure");
        for(int i=0;i<12;i++)
        {
            System.out.println((i+1)+"."+month[i]);
        }
        while(true)
        {
            try
            {
                s1=sc.nextLine();
                if(s1.length()==0)
                {
                    System.out.println("Please enter valid data");
                    continue;
                }
                else
                    n=Integer.parseInt(s1);
                if(n<1 || n>12)
                {
                    System.out.println("Enter valid month number");
                    continue;
                }
                if(y<2017 && n<1)
                {
                    System.out.println("The date has already passed....Enter valid date");
                    continue;
                }
            }
            catch(Exception obj)
            {
                System.out.println("Enter a valid month number");
                continue;
            }
            break;
        }
        m=month[n-1];
    }

    void dep_d()
    {
        System.out.println("\tEnter the day of departure");
        while(true)
        {
            try
            {
                s1=sc.nextLine();
                if(s1.length()==0)
                {
                    System.out.println("Please enter valid data");
                    continue;
                }
                else
                    d=Integer.parseInt(s1);
                if((n==1 || n==3 || n==5 || n==7 || n==8 || n==10 || n==12))
                {
                    if(d<1 || d>31)
                    {
                        System.out.println("Enter between 1 and 31");
                        continue;
                    }
                    if(n==1 && d!=31 && y==2017)
                    {
                        System.out.println("The day has already passed...Please enter a valid day");
                        continue;
                    }
                }
                else if(n==4 || n==6 || n==9 || n==11)
                {
                    if(d<1 || d>30)
                    {
                        System.out.println("Enter between 1 and 30");
                        continue;
                    }
                }
                else if(n==2)
                {
                    if(y==2020)
                    {
                        if(d<1 || d>29)
                        {
                            System.out.println("Enter between 1 and 29");
                            continue;
                        }
                    }
                    else
                    {
                        if(d<1 || d>28)
                        {
                            System.out.println("Enter between 1 and 28");
                            continue;
                        }
                    }
                }
            }
            catch(Exception obj)
            {
                System.out.println("Enter a number");
                continue;
            }
            break;
        }
    }

    void timechoice()
    {
        System.out.println("\t**************************************");
        System.out.println("\tThese are the available timings on the given day:");
        int tch=0;
        String timing[]=new String[5];
        for(int i=0;i<5;i++)
        {
            timing[i]=main1();
            System.out.println((i+1)+"."+timing[i]);
        }
        System.out.println("Choose one of them");
        while(true)
        {
            try
            {
                s1=sc.nextLine();
                if(s1.length()==0)
                {
                    System.out.println("Please enter valid data");
                    continue;
                }
                else
                    tch=Integer.parseInt(s1);
                if(tch<=5 && tch>=1)
                {
                    time=timing[tch-1];  
                    break;
                }
                else
                {
                    System.out.println("Enter between 1 and 5");
                    continue;
                }
            }
            catch(Exception obj)
            {
                System.out.println("Enter valid choice");
                continue;
            }
        }
        timea[t]=time;
    }

    void airlinep()
    {
        System.out.println("\t**************************************");
        System.out.println("\tAvailable Airline on the given day are:");
        int m=0;
        String air[]=new String[10];
        int d=(int)(Math.random()*10);
        System.out.println("Sr.no.\tAirlines");
        if(d>5)
            d=0;
        for(int i=1;i<=5;i++)
        {
            air[i]=airlinep[d+i-1];
            System.out.println(i+".\t"+airlinep[d+i-1]);
        }
        System.out.println("Enter your choice");
        while(true)
        {
            try
            {
                s1=sc.nextLine();
                if(s1.length()==0)
                {
                    System.out.println("Please enter valid data");
                    continue;
                }
                else
                    m=Integer.parseInt(s1);
                if(m<1 || m>5)
                {
                    System.out.println("Enter between 1 and 5");
                    continue;
                }
            }
            catch(Exception obj)
            {
                System.out.println("Enter valid number");
                continue;
            }
            break;
        }
        airline[t]=air[m];
    }

    void adult()
    {
        System.out.println("\t**************************************");
        System.out.println("Maximum booking =20");int ch=0;
        System.out.println("Enter the number of adults(12+)");
        m:
        while(true)
        {
            try
            {
                s1=sc.nextLine();
                if(s1.length()==0)
                {
                    System.out.println("Please enter valid data");
                    continue;
                }
                else
                    adult[t]=Integer.parseInt(s1);
                if(adult[t]==0)
                {
                    System.out.println("There are no Adults...Are you sure?");
                    System.out.println("1.Yes");
                    System.out.println("2.No");
                    while(true)
                    {
                        try
                        {
                            s1=sc.nextLine();
                            if(s1.length()==0)
                            {
                                System.out.println("Please enter valid data");
                                continue;
                            }
                            else
                                ch=Integer.parseInt(s1);
                            if(ch==1)
                                break;
                            else if(ch==2)
                            {
                                System.out.println("Enter the number of adults again");
                                continue m;
                            }
                            else
                            {
                                System.out.println("Enter 1 or 2");
                                continue;
                            }
                        }
                        catch(Exception obj)
                        {
                            System.out.println("Enter valid input");
                            continue;
                        }
                    }
                }
                if(adult[t]>20)
                {
                    System.out.println("Cannot book more than 20 in one booking");
                    continue;
                }
                if(adult[t]<0)
                {
                    System.out.println("Please enter a valid number");
                    continue;
                }
            }
            catch(Exception obj)
            {
                System.out.println("Enter valid number");
                continue;
            }
            break;
        }
    }

    void child()
    {
        System.out.println("\t**************************************");
        System.out.println("Enter the number of children(6-11)");
        while(true)
        {
            try
            {
                s1=sc.nextLine();
                if(s1.length()==0)
                {
                    System.out.println("Please enter valid data");
                    continue;
                }
                else
                    child[t]=Integer.parseInt(s1);
                if((adult[t]+child[t])>20)
                {
                    System.out.println("Cannot book the seats for these many children(Max.book=20)");
                    System.out.println("Enter again");
                    continue;
                }
                if(child[t]<0)
                {
                    System.out.println("Please enter a valid number");
                    continue;
                }
            }
            catch(Exception obj)
            {
                System.out.println("Enter valid number");
                continue;
            }
            break;
        }
    }       

    void infant()
    {
        System.out.println("\t**************************************");
        if(adult[t]>0)
        {
            System.out.println("Enter the number of infants(<=5)");
            while(true)
            {
                try
                {
                    s1=sc.nextLine();
                    if(s1.length()==0)
                    {
                        System.out.println("Please enter valid data");
                        continue;
                    }
                    else
                        infant[t]=Integer.parseInt(s1);
                    if(adult[t]>=20 || child[t]>=20 || (adult[t]+child[t])>=20)
                    {
                        System.out.println("No more tickets can be booked");
                        break;
                    }
                    if((adult[t]+child[t]+infant[t])>20)
                    {
                        System.out.println("Only 20 seats can be booked in 1 booking");
                        System.out.println("Enter again");
                        continue;
                    }
                    if(child[t]<0)
                    {
                        System.out.println("Please enter a valid number");
                        continue;
                    }
                }
                catch(Exception obj)
                {
                    System.out.println("Enter valid number");
                    continue;
                }
                break;
            }
        }
        else
        {
            System.out.println("Infants are not allowed to travel without adults");
            if(child[t]==0)
            {
                System.out.println("There are no children so no booking can be done");
                System.out.println("Redirecting to Main Menu...");
                for(int i=1;i<1000000;i++)
                {
                    for(int j=1;j<100;j++)
                    {}
                }
                choice();
            }
        }
    }

    void travelclass()
    {
        System.out.println("\t**************************************");
        System.out.print("Choose the class of travel-->");
        System.out.println("1.Business \t 2.Economy \t 3.Premium Economy");
        while(true)
        {
            try
            {
                s1=sc.nextLine();
                if(s1.length()==0)
                {
                    System.out.println("Please enter valid data");
                    continue;
                }
                else
                    tc[t]=Integer.parseInt(s1);
                if(tc[t]<1 || tc[t]>3)
                {
                    System.out.println("Enter between 1 and 3");
                    continue;
                }
            }
            catch(Exception obj)
            {
                System.out.println("Wrong choice...Enter again");
                continue;
            }
            break;
        }        
    }

    void passengerdetails()
    {
        System.out.println("\t**************************************");
        name();
        age();
        gender();
    }

    void name()
    {
        System.out.println("Enter the name of the passengers");int k=0;
        if(adult[t]>0)
        {
            System.out.println("Adult:");
            for(int i=t;i<t+adult[t];)
            {
                k=0;na[t]=ra++;
                s1=sc.nextLine();
                if(s1.length()==0 || s1.charAt(0)==' ')
                {
                    ra--;
                    System.out.println("Please enter valid data");
                    continue;
                }
                else
                    namea[na[t]]=s1;
                for(int j=0;j<namea[na[t]].length();j++)
                {
                    char c=namea[na[t]].charAt(j);
                    int d=(int)c;
                    if(!(Character.isLetter(c)|| Character.isWhitespace(c)))
                    {
                        k=1;ra--;
                        break;
                    }
                    if(((d<65 || d>90) && (d<97 || d>122) ))
                    {
                        if(d==32)
                            continue;
                        else
                        {
                            ra--;
                            System.out.println("Name cannot have special characters...Enter again");
                            continue;
                        }
                    }
                }
                if(k==1)
                {
                    System.out.println("Invalid Input");
                    System.out.println("Enter again");
                    continue;
                }
                else
                {
                    i++;
                    continue;
                }
            }
        }
        if(child[t]>0)
        {
            System.out.println("Children:");
            for(int i=t;i<t+child[t];)
            {
                k=0;nc[t]=rc++;
                s1=sc.nextLine();
                if(s1.length()==0)
                {
                    rc--;
                    System.out.println("Please enter valid data");
                    continue;
                }
                else
                    namec[nc[t]]=s1;
                for(int j=0;j<namec[nc[t]].length();j++)
                {
                    char c=namec[nc[t]].charAt(j);
                    int d=(int)c;
                    if(!(Character.isLetter(c)|| Character.isWhitespace(c)))
                    {
                        rc--;k=1;
                        break;
                    }
                    if(((d<65 || d>90) && (d<97 || d>122)))
                    {
                        if(d==32)
                            continue;
                        else
                        {
                            rc--;
                            System.out.println("Name cannot have special characters...Enter again");
                            continue;
                        }
                    }
                }
                if(k==1)
                {
                    System.out.println("Invalid Input");
                    System.out.println("Enter again");
                    continue;
                }
                else
                {
                    i++;
                    continue;
                }
            }
        }
        if(infant[t]>0)
        {
            System.out.println("Infant:");
            for(int i=t;i<t+infant[t];)
            {
                k=0;ni[t]=ri++;
                s1=sc.nextLine();
                if(s1.length()==0)
                {
                    ri--;
                    System.out.println("Please enter valid data");
                    continue;
                }
                else
                    namei[ni[t]]=s1;
                for(int j=0;j<namei[ni[t]].length();j++)
                {
                    char c=namei[ni[t]].charAt(j);
                    int d=(int)c;
                    if(!(Character.isLetter(c)|| Character.isWhitespace(c)))
                    {
                        k=1;ri--;
                        break;
                    }
                    if(((d<65 || d>90) && (d<97 || d>122)))
                    {
                        if(d==32)
                            continue;
                        else
                        {
                            ri--;
                            System.out.println("Name cannot have special characters...Enter again");
                            continue;
                        }
                    }
                }
                if(k==1)
                {
                    System.out.println("Invalid Input");
                    System.out.println("Enter again");
                    continue;
                }
                else
                {
                    i++;
                    continue;
                }
            }
        }
    }

    void age()
    {
        System.out.println("Enter the corresponding age of the passengers");
        if(adult[t]>0)
        {
            System.out.println("Adult:");
            for(int i=t;i<t+adult[t];i++)
            {
                while(true)
                {
                    try
                    {
                        aa[t]=pa++;
                        s1=sc.nextLine();
                        if(s1.length()==0)
                        {   pa--;
                            System.out.println("Please enter valid data");
                            continue;
                        }
                        else
                            agea[aa[t]]=Integer.parseInt(s1);
                        if(agea[aa[t]]>90 || agea[aa[t]]<=12)
                        {
                            pa--;
                            System.out.println("Invalid age ");
                            System.out.println("Enter again");
                            continue;
                        }
                    }
                    catch(Exception obj)
                    {
                        pa--;
                        System.out.println("Enter a number");
                        continue;
                    }
                    break;
                }
            }
        }
        if(child[t]>0)
        {
            System.out.println("Children:");
            for(int i=t;i<t+child[t];i++)
            {
                while(true)
                {
                    try
                    {
                        ac[t]=pc++;
                        s1=sc.nextLine();
                        if(s1.length()==0)
                        {
                            pc--;
                            System.out.println("Please enter valid data");
                            continue;
                        }
                        else
                            agec[ac[t]]=Integer.parseInt(s1);
                        if(agec[ac[t]]>12|| agec[ac[t]]<6)
                        {
                            pc--;
                            System.out.println("Invalid age");
                            System.out.println("Enter again");
                            continue;
                        }
                    }
                    catch(Exception obj)
                    {
                        pc--;
                        System.out.println("Enter a number");
                        continue;
                    }
                    break;
                }
            }
        }
        if(infant[t]>0)
        {
            System.out.println("Infant:");
            for(int i=t;i<t+infant[t];i++)
            {
                while(true)
                {
                    try
                    {
                        ai[t]=pi++;
                        s1=sc.nextLine();
                        if(s1.length()==0)
                        {
                            pi--;
                            System.out.println("Please enter valid data");
                            continue;
                        }
                        else
                            agei[ai[t]]=Integer.parseInt(s1);
                        if(agei[ai[t]]>5 || agei[ai[t]]<1)
                        {
                            pi--;
                            System.out.println("Invalid age");
                            System.out.println("Enter again");
                            continue;
                        }
                    }
                    catch(Exception obj)
                    {
                        pi--;
                        System.out.println("Enter a number");
                        continue;
                    }
                    break;
                }
            }
        }
    }

    void gender()
    {
        System.out.println("Enter Gender(1.Male or 2.Female)");
        if(adult[t]>0)
        {
            System.out.println("Adult:");int m=0;
            for(int i=t;i<t+adult[t];i++)
            {
                while(true)
                {
                    try
                    {
                        ga[t]=qa++;
                        s1=sc.nextLine();
                        if(s1.length()==0)
                        {
                            System.out.println("Please enter valid data");
                            continue;
                        }
                        else
                            m=Integer.parseInt(s1);
                        if(m==1)
                            gendera[ga[t]]="Male";
                        else if(m==2)
                            gendera[ga[t]]="Female";
                        else
                        {
                            qa--;
                            System.out.println("Enter 1 or 2");
                            continue;
                        }
                    }
                    catch(Exception obj)
                    {
                        qa--;
                        System.out.println("Enter valid gender");
                        continue;
                    }
                    break;
                }
            }
        }
        if(child[t]>0)
        {
            System.out.println("Children:");int m=0;
            for(int i=t;i<t+child[t];i++)
            {
                while(true)
                {
                    try
                    {
                        gc[t]=qc++;
                        s1=sc.nextLine();
                        if(s1.length()==0)
                        {
                            System.out.println("Please enter valid data");
                            continue;
                        }
                        else
                            m=Integer.parseInt(s1);
                        if(m==1)
                            genderc[gc[t]]="Male";

                        else if(m==2)
                            genderc[gc[t]]="Female";
                        else
                        {
                            qc--;
                            System.out.println("Enter 1 or 2");
                            continue;
                        }
                    }
                    catch(Exception obj)
                    {
                        qc--;
                        System.out.println("Enter valid gender");
                        continue;
                    }
                    break;
                }
            }
        }
        if(infant[t]>0)
        {
            System.out.println("Infant:");int m=0;
            for(int i=t;i<t+infant[t];i++)
            {
                while(true)
                {
                    try
                    {
                        gi[t]=qi++;
                        s1=sc.nextLine();
                        if(s1.length()==0)
                        {
                            System.out.println("Please enter valid data");
                            continue;
                        }
                        else
                            m=Integer.parseInt(s1);
                        if(m==1)
                            genderi[gi[t]]="Male";
                        else if(m==2)
                            genderi[gi[t]]="Female";
                        else
                        {
                            qi--;
                            System.out.println("Enter 1 or 2");
                            continue;
                        }
                    }
                    catch(Exception obj)
                    {
                        qi--;
                        System.out.println("Enter valid gender");
                        continue;
                    }
                    break;
                }
            }
        }
    }

    void seat()
    {
        System.out.println("**************************************************");
        int row[]=new int[222];
        String column[]=new String[222];
        int d=0;int r=0;
        System.out.println("\t\t ^  COCKPIT THIS WAY  ^");
        System.out.println("NOT Booked:?\tBOOKED:?");
        System.out.println("\t\t\t BUSINESS");
        for(int i='A';i<='F';i++)
            System.out.print("\t"+(char)i);
        System.out.println();
        for(int i=1;i<11;i++)
        {
            System.out.print(i+"\t");
            for(int j='A';j<='F';j++)
            {
                d=(int)(Math.random()*10);
                if(j=='D')
                    System.out.print("|\t|");  
                if(d>=7)
                {
                    seatb[t1[t]]=(char)j+""+i;
                    t1[t]=r++;
                    if(j=='C')
                        System.out.print("?");
                    else
                        System.out.print("?\t");
                }
                else
                {
                    if(j=='C')
                        System.out.print("?");
                    else
                        System.out.print("?\t");
                }
            }
            System.out.println();
        }
        r=0;
        System.out.println("________________________________________________________");
        for(long i=1;i<100000000;i++)
        {}
        System.out.println("\t\t\t Economy");
        for(int i=11;i<28;i++)
        {
            System.out.print(i+"\t");
            for(int j='A';j<='F';j++)
            {
                d=(int)(Math.random()*10);
                if(j=='D')
                    System.out.print("|\t|");  
                if(d>=7)
                {
                    seate[t2[t]]=(char)j+""+i;
                    t2[t]=r++;
                    if(j=='C')
                        System.out.print("?");
                    else
                        System.out.print("?\t");
                }
                else
                {
                    if(j=='C')
                        System.out.print("?");
                    else
                        System.out.print("?\t");
                }
            }
            System.out.println();
        }
        r=0;
        System.out.println("________________________________________________________");
        for(long i=1;i<100000000;i++){}
        System.out.println("\t\t     Premium Economy");
        for(int i=28;i<=37;i++)
        {
            System.out.print(i+"\t");
            for(int j='A';j<='F';j++)
            {
                d=(int)(Math.random()*10);
                if(j=='D')
                    System.out.print("|\t|");  
                if(d>=7)
                {
                    seatpe[t3[t]]=(char)j+""+i;
                    t3[t]=r++;
                    if(j=='C')
                        System.out.print("?");
                    else
                        System.out.print("?\t");
                }
                else
                {
                    if(j=='C')
                        System.out.print("?");
                    else
                        System.out.print("?\t");
                }
            }
            System.out.println();
        }
        r=0;
        System.out.println("________________________________________________________");
        for(int i='A';i<='F';i++)
            System.out.print("\t"+(char)i);
        System.out.println();
        for(long i=1;i<100000000;i++)
        {}
        if(tc[t]==1)
        {
            System.out.println("You have chosen business class");
            b:
            for(int k=t1[t];k<t1[t]+(adult[t]+child[t]+infant[t]);k++)
            {
                if(k==t1[t])
                    System.out.println("Select the row for "+(k-t1[t]+1)+"st person(Digit)");
                else if(k==t1[t]+1)
                    System.out.println("Select the row for "+(k-t1[t]+1)+"nd person(Digit)");
                else if(k==t1[t]+2)
                    System.out.println("Select the row for "+(k-t1[t]+1)+"rd person(Digit)");
                else
                    System.out.println("Select the row for "+(k-t1[t]+1)+"th person(Digit)");
                while(true)
                {
                    try
                    {
                        s1=sc.nextLine();
                        if(s1.length()==0)
                        {
                            System.out.println("Please enter valid data");
                            continue;
                        }
                        else
                            row[k]=Integer.parseInt(s1);
                        if(row[k]<1 || row[k]>10)
                        {
                            System.out.println("Enter between 1 AND 10 as you have chosen business class");
                            continue;
                        }
                    }
                    catch(Exception obj)
                    {
                        System.out.println("Enter a valid number");
                        continue;
                    }
                    break;
                }
                System.out.println("Select the column(Alphabet)");
                while(true)
                {
                    try
                    {
                        s1=sc.nextLine();
                        if(s1.length()==0)
                        {
                            System.out.println("Please enter valid data");
                            continue;
                        }
                        else
                        {
                            if(s1.length()>1)
                            {
                                System.out.println("Please enter a single alphabet");
                                continue;
                            }
                            else
                                column[k]=s1;
                        }
                        column[k]=column[k].toUpperCase();
                        char c=column[k].charAt(0);
                        if(Character.isDigit(c) || Character.isWhitespace(c))
                        {
                            System.out.println("Enter a letter");  
                            continue;
                        }
                        else if((int)c<65 || (int)c>70)
                        {
                            System.out.println("Enter between A and F");
                            continue;
                        }
                    }
                    catch(Exception obj)
                    {
                        System.out.println("Enter a valid alphabet");
                        continue;
                    }
                    break;
                }
                column[k]=column[k].toUpperCase();
                for(int i=0;i<t1[t];i++)
                {
                    if((column[k]+""+row[k]).equals(seatb[i]))
                    {
                        System.out.println("The seat is already booked");
                        System.out.println("Choose another seat");
                        k--;
                        continue b;
                    }
                    for(int l=t1[t];l<t1[t]+(adult[t]+child[t]+infant[t]);l++)//k=adult+child+infant
                    {
                        if((column[k]+""+row[k]).equals(seatb[l]))
                        {
                            System.out.println("Seat is booked");
                            System.out.println("Book another");
                            k--;
                            continue b;
                        }
                    }
                }
                seatb[k]=column[k]+""+row[k];
                System.out.println(seatb[k]);
            }
        }
        if(tc[t]==2)
        {
            System.out.println("You have chosen economy class");
            b:
            for(int k=t2[t];k<t2[t]+(adult[t]+child[t]+infant[t]);k++)
            {
                if(k==t2[t])
                    System.out.println("Select the row for "+(k-t2[t]+1)+"st person(Digit)");
                else if(k==t2[t]+1)
                    System.out.println("Select the row for "+(k-t2[t]+1)+"nd person(Digit)");
                else if(k==t2[t]+2)
                    System.out.println("Select the row for "+(k-t2[t]+1)+"rd person(Digit)");
                else
                    System.out.println("Select the row for "+(k-t2[t]+1)+"th person(Digit)");
                while(true)
                {
                    try
                    {
                        s1=sc.nextLine();
                        if(s1.length()==0)
                        {
                            System.out.println("Please enter valid data");
                            continue;
                        }
                        else
                            row[k]=Integer.parseInt(s1);                        
                        if(row[k]<11 || row[k]>27)
                        {
                            System.out.println("Enter between 11 AND 27 as you have chosen economy class");
                            continue;
                        }
                    }
                    catch(Exception obj)
                    {
                        System.out.println("Enter a valid number");
                        continue;
                    }
                    break;
                }
                System.out.println("Select the column(Alphabet)");
                while(true)
                {
                    try
                    {
                        s1=sc.nextLine();
                        if(s1.length()==0)
                        {
                            System.out.println("Please enter valid data");
                            continue;
                        }
                        else
                        {
                            if(s1.length()>1)
                            {
                                System.out.println("Please enter a single alphabet");
                                continue;
                            }
                            else
                                column[k]=s1;
                        }
                        column[k]=column[k].toUpperCase();
                        char c=column[k].charAt(0);
                        if(Character.isDigit(c) || Character.isWhitespace(c))
                        {
                            System.out.println("Enter a letter");  
                            continue;
                        }
                        else if((int)c<65 || (int)c>70)
                        {
                            System.out.println("Enter between A and F");
                            continue;
                        }
                    }
                    catch(Exception obj)
                    {
                        System.out.println("Enter a valid alphabet");
                        continue;
                    }
                    break;
                }
                for(int i=0;i<t2[t];i++)
                {
                    if((column[k]+""+row[k]).equals(seate[i]))
                    {
                        System.out.println("The seat is already booked");
                        System.out.println("Choose another seat");
                        k--;
                        continue b;
                    }
                    for(int l=t2[t];l<t2[t]+(adult[t]+child[t]+infant[t]);l++)//k=adult+child+infant
                    {
                        if((column[k]+""+row[k]).equals(seate[l]))
                        {
                            System.out.println("Seat booked");
                            k--;
                            continue b;
                        }
                    }
                }
                seate[k]=column[k]+""+row[k];
                System.out.println(seate[k]);
            }
        }
        if(tc[t]==3)
        {
            System.out.println("You have chosen premium economy class");
            b:
            for(int k=t3[t];k<t3[t]+(adult[t]+child[t]+infant[t]);k++)
            {
