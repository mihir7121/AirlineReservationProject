    void exit()
    {
        System.out.println("\t\t                        THANK YOU FOR USING THE FACILITY                           ");
        System.out.println("\t\t                         ???ENJOY YOUR DAY AND FLIGHT???                              ");
        System.out.println("\t\t***********************************************************************************");
        System.out.println("\t\t* T T T T T H     H     A     N      N K   K       Y      Y    O O    U      U || *");
        System.out.println("\t\t*     T     H     H    A A    N N    N K K           Y   Y   O     O  U      U || *");
        System.out.println("\t\t*     T     H H H H   A A A   N  N   N K               Y    O       O U      U || *");
        System.out.println("\t\t*     T     H     H  A     A  N   N  N K K             Y     O     O   U    U  || *");
        System.out.println("\t\t*     T     H     H A       A N    N N K   K           Y       O O       U U   ** *");
        System.out.println("\t\t***********************************************************************************");
        System.out.println("IMP:Report atleast 45 mins before the departure time");
        for(long i=0;i<100000000;i++){for(int j=0;j<10;j++){}}
        System.exit(0);
    }

    void choice()
    {        
        System.out.println("1.Book Tickets");
        System.out.println("2.Cancel Tickets");      
        System.out.println("3.View Passenger Details");
        System.out.println("4.Print Ticket");
        System.out.println("5.About Us");
        System.out.println("6.Exit");
        System.out.println("Enter your choice");
        while(true)
        {
            try
            {
                s1=sc.nextLine();
                if(s1.length()==0)
                {
                    System.out.println("Please enter valid data");
                    continue;
                }
                else
                    ch=Integer.parseInt(s1);
                if(ch<1 || ch>6)
                {
                    System.out.println("Enter between 1 and 6");
                    continue;
                }
            }
            catch(NumberFormatException obj)
            {
                System.out.println("Enter digits only");
                continue;
            }
            catch(Exception obj)
            {
                System.out.println("Enter valid number");
                continue;
            }
            break;
        }
        if(ch==1)
            book();
        if(ch==2)   
            cancel();
        if(ch==3)
            view();
        if(ch==4)
            ticket();
        if(ch==5)
            aboutUs();
        if(ch==6)
            exit();
        System.out.println("\t\t**************************************");
    }

    static void main()
    {
        for(int j=1;j<1000000000;j++);
        for(long i=0;i<=70000000;i++)
        {            
            if(i==100000)
                System.out.println("\t\t*W           W  E E E E  L           C C C      O O     M M    M M  E E E E *");
            if(i==10000000)
                System.out.println("\t\t* W         W   E        L         C          O     O   M  M  M  M  E       *");
            if(i==30000000)
                System.out.println("\t\t*  W   W   W    E E E    L        C          O       O  M    M   M  E E E   *");
            if(i==50000000)
                System.out.println("\t\t*   W W W W     E        L         C          O     O   M        M  E       *");
            if(i==70000000)
                System.out.println("\t\t*    W   W      E E E E  L L L L     C C C      O O     M        M  E E E E *");
        }
        System.out.println("\t\t*****************************************************************************");
        System.out.println("\t\t                    ???Domestic Air Ticket Reservation???                       ");
        Airticket_Reservation ob=new Airticket_Reservation();
        ob.choice();
    }
