                    System.out.println("Select the row for "+(k-t3[t]+1)+"st person(Digit)");
                else if(k==t3[t]+1)
                    System.out.println("Select the row for "+(k-t3[t]+1)+"nd person(Digit)");
                else if(k==t3[t]+2)
                    System.out.println("Select the row for "+(k-t3[t]+1)+"rd person(Digit)");
                else
